<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FloodSense</title>

  <!-- Bootstrap CSS for responsive layout and styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- FontAwesome for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

  <!-- Custom Styles -->
  <style>
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
      background-color: #121212; /* Dark background */
      color: #e0e0e0; /* Light text */
      font-family: 'Roboto', sans-serif;
    }

    .container {
      flex: 1; /* Pushes the footer to the bottom if content is small */
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px;
    }

    h1 {
      font-size: 3.5em;
      font-weight: 700;
      color: #ffffff;
      text-align: center;
      margin-bottom: 50px;
    }

    /* Data Section Styling */
    .data-section {
      text-align: center;
      margin: 30px 0;
    }

    .data-label {
      font-size: 1.4em;
      font-weight: 500;
      color: #b0b0b0;
      margin-top: 15px;
    }

    .data-value {
      font-size: 2.5em;
      font-weight: 700;
    }

    /* Temperature and Distance color classes */
    .data-value.temp-blue {
      color: #007bff;
    }

    .data-value.temp-green {
      color: #28a745;
    }

    .data-value.temp-red {
      color: #d9534f;
    }

    .data-value.dist-red {
      color: #d9534f;
    }

    .data-value.dist-yellow {
      color: #ffc107;
    }

    .data-value.dist-green {
      color: #28a745;
    }

    /* Card Styles for sections */
    .card {
      background-color: #1c1c1c;
      border-radius: 12px;
      box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
      margin-bottom: 40px;
    }

    .card-header {
      background-color: #007bff;
      color: #fff;
      font-size: 1.25em;
      padding: 15px;
      text-align: center;
    }

    .card-body {
      padding: 40px;
      text-align: center;
      color: #fff;
    }

    .card-footer {
      background-color: #1a1a1a;
      color: #b0b0b0;
      padding: 15px;
      text-align: center;
      font-size: 0.9em;
    }

    /* Flood Warning Container Styles */
    .flood-warning-container {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 10px 20px;
      border-radius: 8px;
      background-color: #fff;
      color: #333;
      margin-top: 30px;
      font-size: 1.2em;
      font-weight: 600;
      transition: all 0.3s ease;
      max-width: 500px;
      margin: 0 auto;
      height: 80px;
      overflow: hidden;
    }

    .flood-warning-container.alert-danger {
      background-color: #f8d7da;
      color: #721c24;
      border-left: 5px solid #721c24;
    }

    .flood-warning-container.alert-success {
      background-color: #d4edda;
      color: #155724;
      border-left: 5px solid #155724;
    }

    .flood-warning-container i {
      margin-right: 15px;
    }

    /* Footer Styling */
    footer {
      text-align: center;
      background-color: #121212;
      color: #b0b0b0;
      padding: 15px 0;
      font-size: 0.9em;
      margin-top: auto;
    }

    .contact-me p {
      margin: 5px 0;
      font-size: 1.1em;
      font-weight: bold;
    }

    .contact-me a {
      color: #b0b0b0;
      margin: 0 10px;
      transition: color 0.3s;
    }

    .contact-me a:hover {
      color: #007bff;
    }

    @media (max-width: 767px) {
      h1 {
        font-size: 2.8em;
      }

      .data-section {
        margin: 20px;
      }

      .card-body {
        padding: 25px;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <!-- Header Section -->
    <h1>Real-Time IoT Data Monitoring</h1>

    <!-- Temperature and Distance Data Section -->
    <div class="row text-center">
      <div class="col-lg-6 col-md-6 col-sm-12 data-section">
        <!-- Temperature Display -->
        <p class="data-label"><i class="fas fa-thermometer-half"></i> Temperature (Â°C)</p>
        <p id="temperature" class="data-value">0</p>
      </div>

      <div class="col-lg-6 col-md-6 col-sm-12 data-section">
        <!-- Distance Display -->
        <p class="data-label"><i class="fas fa-ruler-horizontal"></i> Distance (cm)</p>
        <p id="distance" class="data-value">0</p>
      </div>
    </div>

    <!-- Flood Warning Section -->
    <div class="row">
      <div class="col-12">
        <div id="flood-warning" class="flood-warning-container">
          <!-- Flood Warning Icon and Status Text -->
          <i id="flood-icon" class="fas fa-check-circle"></i>
          <span id="flood-status">No Flood Risk</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Section -->
  <footer>
    <div class="container">
      <div class="contact-me mt-2">
        <p>Contact Me:</p>
        <!-- Social Media Links -->
        <a href="https://linkedin.com/in/jayprakash-malik/" target="_blank"><i class="fab fa-linkedin" aria-hidden="true" style="font-size: 1.5em; margin-right: 10px;"></i></a>
        <a href="https://github.com/Tyler7x1/" target="_blank"><i class="fab fa-github" aria-hidden="true" style="font-size: 1.5em; margin-right: 10px;"></i></a>
        <a href="mailto:jpm022504@gmail.com"><i class="fas fa-envelope" aria-hidden="true" style="font-size: 1.5em;"></i></a>
      </div>
    </div>
    <p>Created by <a href="https://github.com/Tyler7x1" target="_blank"><strong>Jayprakash Malik</strong></a></p>
  </footer>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"></script>

  <!-- Socket.io client script for real-time data updates -->
  <script src="/socket.io/socket.io.js"></script>

  <!-- Custom JavaScript to update data dynamically -->
  <script>
    const socket = io();

    // Listen for new data from the server
    socket.on('newData', (data) => {
      const temperature = data.temperature;
      const distance = data.distance;
      const floodWarning = data.floodWarning;

      const temperatureElement = document.getElementById('temperature');
      temperatureElement.textContent = temperature;
      temperatureElement.className = temperature < 20 ? 'data-value temp-blue' : (temperature <= 37 ? 'data-value temp-green' : 'data-value temp-red');

      const distanceElement = document.getElementById('distance');
      distanceElement.textContent = distance;
      distanceElement.className = distance < 30 ? 'data-value dist-red' : (distance <= 50 ? 'data-value dist-yellow' : 'data-value dist-green');

      const floodWarningContainer = document.getElementById('flood-warning');
      const floodStatusElement = document.getElementById('flood-status');
      const floodIcon = document.getElementById('flood-icon');

      // Update the flood warning section based on flood risk
      if (floodWarning) {
        floodStatusElement.textContent = "Flood Risk Detected!";
        floodWarningContainer.classList.add('alert-danger');
        floodWarningContainer.classList.remove('alert-success');
        floodIcon.classList.replace('fa-check-circle', 'fa-exclamation-circle');
      } else {
        floodStatusElement.textContent = "No Flood Risk";
        floodWarningContainer.classList.add('alert-success');
        floodWarningContainer.classList.remove('alert-danger');
        floodIcon.classList.replace('fa-exclamation-circle', 'fa-check-circle');
      }
    });
  </script>
</body>

</html>
